                <div class="tab-pane" id="settings">
                    @using (Html.BeginForm("ProfileUpdate", "Employee", FormMethod.Post, new { @class = "form-horizontal form-material", enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label class="col-md-12">Full Name</label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(x => x.employee.Name, new { @class = "form-control form-control-line", @placeholder = "Name" })
                            </div>
                            <div class="col-md-6">
                                @Html.TextBoxFor(x => x.employee.Surname, new { @class = "form-control form-control-line", @placeholder = "SurName" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="example-email" class="col-md-12">Email / Phone</label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(x => x.employee.Email, new { @class = "form-control form-control-line", @placeholder = "Email", @type = "email" })
                            </div>
                            <div class="col-md-6">
                                @Html.TextBoxFor(x => x.employee.Phone, new { @class = "form-control form-control-line", @placeholder = "123 456 7890", @type = "tel" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Password</label>
                            <div class="col-md-6">
                                <input type="password" value="password" name="password" id="password" class="form-control form-control-line">
                            </div>
                            <div class="col-md-6">
                                <input type="password" value="password" name="rpassword" id="rpassword" class="form-control form-control-line" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Message</label>
                            <div class="col-md-12">
                                @Html.TextAreaFor(x => x.employee.Information, 5, 1, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Profil</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(x => x.employee.Profile, new { @class = "form-control form-control-line", @type = "file" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-success">Update Profile</button>
                            </div>
                        </div>
