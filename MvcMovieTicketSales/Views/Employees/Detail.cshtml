        <div class="white-box">
            <div class="user-bg">
                <img width="100%" alt="user" src="@Model.employee.Profile">
            </div>

            <div class="user-btm-box">
                <!-- .row -->
                <div class="row text-center m-t-10">
                    <div class="col-md-6 b-r"><strong>Name</strong><p>@Model.employee.Name @Model.employee.Surname</p></div>
                    <div class="col-md-6"><strong>Designation</strong><p>@Model.employee.Authority.Name</p></div>
                </div>
                <!-- /.row -->
                <hr>
                <!-- .row -->
                <div class="row text-center m-t-10">
                    <div class="col-md-6 b-r"><strong>Email ID</strong><p>@Model.employee.Email</p></div>
                    <div class="col-md-6"><strong>Phone</strong><p>@Model.employee.Phone</p></div>
                </div>
                <!-- /.row -->
                <hr>
                <!-- .row -->
                <div class="row text-center m-t-10">
                    <div class="col-md-12"><strong>Address</strong><p>@Model.employee.Address<br />Turkey</p></div>
                </div>
                <hr>
                <!-- /.row -->
                @if (Model.employeeFollow.Count() != 0)
                {
                    foreach (var item in Model.employeeFollow)
                    {
                        <div class="col-md-4 col-sm-4 text-center">
                            <p class="text-danger">
                                <a href="@item.Url" target="_blank">
                                    @if (item.SocialMediaId == 20)
                                    {
                                        <i class="ti-game"></i>
                                    }
                                    else
                                    {
                                        <i class="ti-@item.SocialMedia.Name"></i>
                                    }
                                </a>
                            </p>
                            <h5>@item.Name</h5>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        Sosyal medya hesapları bulunmamaktadır
                    </div>
                }
            </div>
        </div>
    </div>
