@using MvcMovieTicketSales.Models.EntityFramework
@model List<EmployeeFollow>

@{
    int i = 0;
}

@if (Model.Count() != 0)
{
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <b>@ViewBag.Employe</b> personeline ait @Model.Count() tane sosyal medya hesabı bulunmaktadır
    </div>

    <div class="liste">
        <table id="socialmedia" class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class="text-center">HESAP ADI</th>
                    <th class="text-center">SOSYAL MEDYA ADI</th>
                    <th class="text-center">ICON</th>
                    <th class="text-center">URL</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.Name</td>
                        <td>@item.SocialMedia.Name</td>
                        <td><i class="fa fa-@item.SocialMedia.Name"></i></td>
                        <td><a href="@item.Url" target="_blank">@item.Url</a></td>
                        <td>
                            <a href="/Employees/SocialMediaUpdate/@item.Id" class="btn btn-success btn-icon-split" data-toggle="tooltip" data-original-title="Güncelle">
                                <span class="icon text-white-50">
                                    <i class="fa fa-check"></i>
                                </span>
                            </a>

                            <a href="/Employees/SocialMediaDelete/@item.Id" class="btn btn-danger btn-icon-split" data-toggle="tooltip" data-original-title="Sil">
                                <span class="icon text-white-50">
                                    <i class="fa fa-trash"></i>
                                </span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <b>@ViewBag.Employe</b> personeline ait sosyal medya hesabı bulunmamaktadır
    </div>
}
