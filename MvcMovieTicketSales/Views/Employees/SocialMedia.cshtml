@model MvcMovieTicketSales.Models.EntityFramework.EmployeeFollow

@{
    ViewBag.Title = "SocialMedia";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <b>Önemli Bilgi:</b> Profilinizde sadece ilk 3 sosyal medya hesabınız görülmektedir
</div>

@using (Html.BeginForm("SocialMedia", "Employees", FormMethod.Post))
{

    <div class="form-group">
        @Html.LabelFor(x => x.Name, "Hesap Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Hesap Adı" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.SocialMedia.Name, "Sosyal Medya Adı")
        @Html.DropDownListFor(x => x.SocialMediaId, (IEnumerable<SelectListItem>)ViewBag.SocialMedia, "Sosyal Medya Seçiniz", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Url, "Hesap Url")
        @Html.TextBoxFor(x => x.Url, new { @class = "form-control", @placeholder = "Hesap Url" })
    </div>

    <div class="form-group">
        <button type="submit" class="fcbtn btn btn-success btn-outline btn-1e">Sosyal Medya Ekle</button>
    </div>
}

@Html.Action("SocialMediaList", "Employees")

