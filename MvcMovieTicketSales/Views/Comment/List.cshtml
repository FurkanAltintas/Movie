@model List<MvcMovieTicketSales.Models.EntityFramework.Comment>

<div class="details">
    <h2>Yorumlar</h2>
    @if (Model.Count() != 0)
    {
        foreach (var item in Model)
        {
            <h3>@item.FullName</h3>
            <p style="float: left;">@item.Message</p>
            <p style="float: right;">@item.History.Value.ToString("dd MMM yyyy HH:mm")</p>
            <br /><br />
        }
    }
    else
    {
        <p>Yorum bulunmamaktadır. İlk yorumu sen yap...</p>
    }
</div>
