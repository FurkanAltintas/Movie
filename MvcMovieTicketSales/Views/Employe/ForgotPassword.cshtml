@model MvcMovieTicketSales.Models.EntityFramework.Employee

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@using (Html.BeginForm("ForgotPassword", "Employe", FormMethod.Post, new { @class = "form-horizontal form-material" }))
{
    <h3 class="box-title m-b-20">Şifre Kurtarma</h3>
    <div class="form-group ">
        <div class="col-xs-12">
            <input class="form-control" type="text" required="" name="activation" id="activation" placeholder="6 Haneli Aktivasyon Kodunu Giriniz" maxlength="6">
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Şifre" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            @Html.PasswordFor(x => x.RPassword, new { @class = "form-control", @placeholder = "Şifre Tekrar" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            @ViewBag.Error
        </div>
    </div>
    <div class="form-group text-center m-t-20">
        <div class="col-xs-12">
            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Şifre Sıfırla</button>
        </div>
    </div>
}