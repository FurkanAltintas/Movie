@model MvcMovieTicketSales.Models.EntityFramework.MovieCategory

@{
    ViewBag.Title = "CategoryUpdate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("CategoryUpdate", "Movies", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, "Kategori Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Kategori Adı" })
    </div>

    <div class="form-group">
        <button type="submit" class="fcbtn btn btn-success btn-outline btn-1e">Kategori Güncelle</button>
    </div>
}