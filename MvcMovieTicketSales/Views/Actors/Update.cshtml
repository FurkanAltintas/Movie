@model MvcMovieTicketSales.Models.EntityFramework.Celebrite

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Update", "Actors", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-sm-12 white-box">
        <div class="col-sm-9 float-left">
            <div class="form-group">
                @Html.LabelFor(x => x.FullName, "Oyuncunun Adı")
                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @placeholder = "Oyuncunun Adı" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Gender, "Cinsiyet")
                @Html.DropDownListFor(x => x.Gender, new List<SelectListItem>
                          {
                              new SelectListItem {Text = "Erkek", Value = "True"},
                              new SelectListItem {Text = "Kadın", Value = "False"}
                          }, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Age, "Yaşı")
                @Html.TextBoxFor(x => x.Age, new { @class = "form-control", @placeholder = "Oyuncunun Yaşı" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Birthday, "Doğum Tarihi") (@Model.Birthday.Value.ToString("dd.MM.yyyy"))
                @Html.TextBoxFor(x => x.Birthday, "{0:dd.MM.yyyy}", new { @class = "form-control", @type = "date" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Hobby, "Hobileri")
                @Html.TextBoxFor(x => x.Hobby, new { @class = "form-control", @placeholder = "Hobileri" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Overview, "Özet")
                @Html.TextAreaFor(x => x.Overview, 7, 1, new { @class = "form-control", @placeholder = "Özet" })
            </div>
        </div>
        <div class="col-sm-3 float-right">
            <div class="form-group">
                <img src="@Model.Image" style="width: 400px; height: auto;" />
            </div>
        </div>
    </div>
}

