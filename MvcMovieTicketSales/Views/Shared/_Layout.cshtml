<!DOCTYPE HTML>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Moviepoint - @ViewBag.Title</title>
    <!-- Favicon Icon -->
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/img/favcion.png")" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/css/bootstrap.min.css")" media="all" />
    <!-- Slick nav CSS -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/css/slicknav.min.css")" media="all" />
    <!-- Iconfont CSS -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/css/icofont.css")" media="all" />
    <!-- Owl carousel CSS -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/css/owl.carousel.css")">
    <!-- Popup CSS -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/css/magnific-popup.css")">
    <!-- Main style CSS -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/css/style.css")" media="all" />
    <!-- Responsive CSS -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/css/responsive.css")" media="all" />
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Page loader -->
    @*<div id="preloader"></div>*@
    <!-- header section start -->
    @if (Session["Ticket"] == null)
    {
        <header class="header">
            <div class="container">
                <div class="header-area">
                    <div class="logo">
                        <a href="@Url.Action("Index","Home")"><img src="~/Content/Moviepoint-Online-Movie-Template/assets/img/logo.png" alt="logo" /></a>
                    </div>
                    <div class="header-right">
                        @using (Html.BeginForm("Index", "Movie", FormMethod.Post))
                        {
                            <input type="text" name="txtAra" id="txtAra" placeholder="Film Ara" />
                            <button type="submit" name="btnAra" id="btnAra"><i class="icofont icofont-search"></i></button>
                        }

                        @if (Session["MFullName"] != null)
                        {
                            <div class="menu-area">
                                <div class="responsive-menu"></div>
                                <div class="mainmenu">
                                    <ul id="primary-menu">
                                        <li style="z-index: 999;">
                                            <a href="#">@Session["MFullName"] <i class="icofont icofont-simple-down"></i></a>
                                            <ul>
                                                <li><a href="blog-details.html">Biletlerim</a></li>
                                                <li><a href="@Url.Action("Info","Member")">Bilgilerim</a></li>
                                                <li><a href="@Url.Action("LogOut","Account")">Çıkış Yap</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        }
                        else
                        {
                            <ul>
                                <li><a href="@Url.Action("Login","Account")">Giriş Yap</a></li>
                                <li><a class="register-popup" href="@Url.Action("Register","Account")">Üye Ol</a></li>
                            </ul>
                        }
                    </div>
                    <div class="menu-area">
                        <div class="responsive-menu"></div>
                        <div class="mainmenu">
                            <ul id="primary-menu">
                                <li><a href="@Url.Action("Index","Home")">Anasayfa</a></li>
                                <li><a href="@Url.Action("Index","Movie")">Filmler</a></li>
                                <li><a href="@Url.Action("Index","Celebritie")">Oyuncular</a></li>
                                <li>
                                    <a href="#">Film Detay <i class="icofont icofont-simple-down"></i></a>
                                    <ul>
                                        <li><a href="@Url.Action("Index","Movie")">Tümü</a></li>
                                        <li><a href="@Url.Action("NowPlaying","Movie")">Sinemalarda</a></li>
                                        <li><a href="@Url.Action("ComingSoon","Movie")">Çok Yakında</a></li>
                                    </ul>
                                </li>
                                @if (Session["MFullName"] != null)
                                {
                                    <li><a href="@Url.Action("WatchList","Member")">İzlenilecek Filmler</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    }
    <!-- header section end -->

    @RenderBody()

    <!-- footer section start -->
    @if (Session["Ticket"] == null)
    {
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-sm-6">
                        <div class="widget">
                            <img src="~/Content/Moviepoint-Online-Movie-Template/assets/img/logo.png" alt="about" />
                            <p>Pendik / İstanbul - Türkiye</p>
                            <h6><span>Bizi arayın: </span>(+555) 555 555 5555</h6>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="widget">
                            <h4>Yasal</h4>
                            <ul>
                                <li><a href="#">Kullanım Şartları</a></li>
                                <li><a href="#">Gizlilik Politikası</a></li>
                                <li><a href="#">Güvenlik</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="widget">
                            <h4>Hesap</h4>
                            <ul>
                                @if (Session.Contents["MId"] != null)
                                {
                                    <li><a href="@Url.Action("Info","Member")">Hesabım</a></li>
                                    <li><a href="@Url.Action("WatchList","Member")">İzlenecekler Listesi</a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Login","Account")">Hesabım</a></li>
                                    <li><a href="#" data-toggle="modal" data-target="#watchListModal">İzlenecekler Listesi</a></li>
                                }
                                <li><a href="/Movie">Koleksiyonlar</a></li>
                                <li><a href="#">Kullanıcı Rehberi</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <div class="widget">
                            <h4>Bülten</h4>
                            <p>Bizden en son haberleri almak için şimdi bülten sistemimize abone olun</p>
                            @using (Html.BeginForm("Subscribe", "Home", FormMethod.Post))
                            {
                                <input type="email" name="email" id="email" placeholder="Epostanızı giriniz.." />
                                <button type="submit">ŞİMDİ ABONE OL</button>
                            }
                        </div>
                    </div>
                </div>
                <hr />
            </div>
            <div class="copyright">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 text-center text-lg-left">
                            <div class="copyright-content">
                                <p><a target="_blank" href="https://www.templateshub.net">Templates Hub </a></p>
                            </div>
                        </div>
                        <div class="col-lg-6 text-center text-lg-right">
                            <div class="copyright-content">
                                <a href="#" class="scrollToTop">
                                    Başa Dön<i class="icofont icofont-arrow-up"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    }
    <!-- footer section end -->
    <!-- jquery main JS -->
    <script src="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/js/jquery.min.js")"></script>
    <!-- Bootstrap JS -->
    <script src="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/js/bootstrap.min.js")"></script>
    <!-- Slick nav JS -->
    <script src="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/js/jquery.slicknav.min.js")"></script>
    <!-- owl carousel JS -->
    <script src="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/js/owl.carousel.min.js")"></script>
    <!-- Popup JS -->
    <script src="@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/js/jquery.magnific-popup.min.js")"></script>
    <!-- Isotope JS -->
    <script src=@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/js/isotope.pkgd.min.js")></script>
    <!-- main JS -->
    <script src=@Url.Content("~/Content/Moviepoint-Online-Movie-Template/assets/js/main.js")></script>
</body>

</html>


<div class="modal fade" id="watchListModal" tabindex="-1" role="dialog" aria-labelledby="watchListModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content col-md-12">
            <div class="modal-header" align="center">
                <h5 class="modal-title" id="watchListModalLabel" style="color: black;">
                    İzlenilecek Film
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>İzlenilecek listesine gitmek için oturum açmanız gerekmektedir</p>
            </div>
        </div>
    </div>
</div>