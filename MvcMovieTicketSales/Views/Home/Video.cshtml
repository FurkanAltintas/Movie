@using MvcMovieTicketSales.Models.EntityFramework
@model List<Movie>

@{
    int i = 0;
}
<section class="video ptb-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title pb-20">
                    <h1><i class="icofont icofont-film"></i> Yeni Fragmanlar & Videolar</h1>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            @foreach (var item in Model.Take(1))
            {
                i = item.Id;
                <div class="col-md-8">
                    <div class="video-area">
                        <img src="@item.Image" alt="@item.Name" style="width: 715px;" />
                        <a href="@item.Trailer" class="popup-youtube">
                            <i class="icofont icofont-ui-play"></i>
                        </a>
                        <div class="video-text">
                            <h2>@item.Name</h2>
                            <div class="review">
                                <div class="author-review">
                                    <i class="icofont icofont-star"></i>
                                    <i class="icofont icofont-star"></i>
                                    <i class="icofont icofont-star"></i>
                                    <i class="icofont icofont-star"></i>
                                    <i class="icofont icofont-star"></i>
                                </div>
                                <h4>180k voters</h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-md-4" style="margin-top: -15px;">
                <div class="row">
                    @foreach (var item in Model.Where(x => x.Id != i))
                    {
                        <div class="col-md-12 col-sm-6">
                            <div class="video-area">
                                <img src="@item.Image" alt="video" />
                                <a href="@item.Trailer" class="popup-youtube">
                                    <i class="icofont icofont-ui-play"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
