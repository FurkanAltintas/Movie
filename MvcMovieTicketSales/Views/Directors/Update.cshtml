@model MvcMovieTicketSales.Models.EntityFramework.Director

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-sm-12 white-box">
    <div class="col-sm-9 float-left">
        <div class="form-group">
            @Html.LabelFor(x => x.FullName, "Yönetmenin Adı Soyadı")
            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @disabled = "disabled" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Overview, "Özet")
            @Html.TextAreaFor(x => x.Overview, 5, 1, new { @class = "form-control", @disabled = "disabled" })
        </div>

        <div class="form-group">
            <a href="@Url.Action("Index", "Directors")" class="fcbtn btn btn-warning btn-outline btn-1e">Geri Dön</a>
        </div>
    </div>

    <div class="col-sm-3 float-right">
        <div class="form-group">
            <img src="@Model.Image" style="width: 400px; height: auto;" />
        </div>
    </div>

</div>

